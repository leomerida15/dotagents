{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
}
