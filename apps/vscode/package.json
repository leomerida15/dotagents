{
	"name": "@dotagents/vscode",
	"displayName": "DotAgents VSCode",
	"description": "VSCode extension for DotAgents context synchronization",
	"version": "0.0.1",
	"publisher": "snor",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dotagents-vscode.sync",
				"title": "DotAgents: Synchronize Now",
				"icon": "$(sync)"
			},
			{
				"command": "dotagents-vscode.showMenu",
				"title": "DotAgents: Show Menu"
			},
			{
				"command": "dotagents-vscode.addAgent",
				"title": "DotAgents: Add Agent/IDE Manually",
				"icon": "$(plus)"
			}
		],
		"configuration": {
			"title": "DotAgents",
			"properties": {
				"dotagents.debug.logToFile": {
					"type": "boolean",
					"default": true,
					"description": "When enabled, log messages are also written to a file in the workspace (see dotagents.debug.logFilePath)."
				},
				"dotagents.debug.logFilePath": {
					"type": "string",
					"default": "../dotagents/.agents/.ai/extension-debug.log",
					"description": "Path relative to workspace root where debug log is written when logToFile is true."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "bun run build",
		"build": "bun run -b bunstart.build.ts",
		"watch": "bun build ./src/extension.ts --outdir ./dist --target node --external vscode --watch",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/vscode": "^1.85.0",
		"@types/node": "20.x",
		"js-yaml": "^4.1.1",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@dotagents/diff": "workspace:*",
		"@dotagents/rule": "workspace:*"
	}
}